@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Specialty>;

<h2>Specialties</h2>

@if (Model.Count == 0)
{
  <p>There are no specialties in the list</p>
}

<ul>
  @foreach(Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.Name}", "Details", new { id = specialty.SpecialtyId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a specialty", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>