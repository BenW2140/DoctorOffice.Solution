@{
  Layout = "_Layout";
}
@model DoctorOffice.Models.Specialty

<h2>Add a new Specialty</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select Doctor to Add This Specialty To.")
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Add new Specialty" class="btn btn-default"/>
}
<p>@Html.ActionLink("Show all Specialties", "Index")</p>