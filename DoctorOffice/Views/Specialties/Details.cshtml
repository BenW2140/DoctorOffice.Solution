@{
  Layout = "_Layout";
}
@model DoctorOffice.Models.Specialty;

<h2>Specialty Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Doctors.Count == 0)
{
  <p>There are no doctors with this specialty</p>
}
else
{
  <h4>Doctors with this specialty:</h4>
  <ul>
    @foreach(var join in Model.Doctors)
    {
      <li>@join.Doctor.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new Doctor to this specialty", "Create", "Doctors")</p>
<p>@Html.ActionLink("Back to Specialties", "Index")</p>

